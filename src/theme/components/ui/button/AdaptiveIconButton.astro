---
import type { HTMLAttributes } from 'astro/types'

export type Props = HTMLAttributes<'button'> & {
	active?: boolean
}

const { class: className, active } = Astro.props
---

<button
	class:list={[
		'flex flex-col items-center justify-center px-6 py-0.5 rounded-full',
		'sm:flex-row sm:justify-start sm:gap-4 sm:p-2',
		className,
		active && 'text-primary sm:text-primary-fg sm:bg-primary',
	]}
>
	<div class="flex justify-center items-center">
		<slot name="icon" />
	</div>
	<div class="text-xs sm:text-base">
		<slot />
	</div>
</button>
