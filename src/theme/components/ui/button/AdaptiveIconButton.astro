---
import type { HTMLAttributes } from 'astro/types'

export type Props = HTMLAttributes<'a'> & {
	active?: boolean
}

const { class: className, active, ...props } = Astro.props
---

<a
	class:list={[
		'transition-all flex flex-col items-center justify-center px-8 py-2 rounded-3xl',
		'sm:flex-row sm:justify-start sm:gap-4 sm:p-4 lg:px-6',
		className,
		active
			? 'sm:neumorphism-sunken'
			: 'sm:neumorphism-bulge sm:hover:neumorphism-sunken hover:scale-99',
	]}
	role="button"
	tabindex="0"
	{...props}
>
	<div class="flex justify-center items-center">
		<slot name="icon" />
	</div>
	<div class="text-xs sm:text-base select-none">
		<slot />
	</div>
</a>
