---
import type { HTMLAttributes } from 'astro/types'

export type Props = HTMLAttributes<'a'> & {
	active?: boolean
}

const { class: className, active, ...props } = Astro.props
---

<a
	class:list={[
		'transition-all flex flex-col items-center justify-center px-4 py-2 rounded-3xl',
		'sm:gap-1 sm:px-6',
		'md:flex-row md:justify-start md:gap-4 md:p-4 lg:px-6',
		className,
		active
			? 'sm:neumorphism-bulge-sm text-primary'
			: 'sm:hover:neumorphism-sunken-sm hover:scale-99',
	]}
	role="button"
	tabindex="0"
	{...props}
>
	<div class="flex justify-center items-center">
		<slot name="icon" />
	</div>
	<div class="text-xs md:text-base select-none">
		<slot />
	</div>
</a>
